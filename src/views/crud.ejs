<body>
  <form action="/post-crud" method="POST">
    <div class="form-row">
      <div class="form-group col-3">
        <label for="ipputHo">Frist name</label>
        <input type="text" class="form-control" placeholder="ho" name="ho" />
      </div>
      <div class="form-group col-3">
        <label for="ipputTen">Last Name</label>
        <input type="text" class="form-control" placeholder="ten" name="ten" />
      </div>
      <div class="form-row">
        <div class="form-group col-6">
          <label for="inputEmail4">accountName</label>
          <input type="email" class="form-control" placeholder="email" name="email" />
        </div>
        <div class="form-group col-md-6">
          <label for="inputPassword4">Password</label>
          <input type="password" class="form-control" placeholder="Password" name="password" />
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="inputdiaChi">diaChi</label>
      <input type="text" class="form-control" name="diaChi" placeholder="1234 Main St" />
    </div>

    <div class="form-row">
      <div class="form-group col-md-5">
        <label for="inputCity">City</label>
        <input type="text" class="form-control" id="inputCity" />
      </div>
      <div class="form-group col-md-3">
        <label for="inputState">gioiTinh</label>
        <select name="gioiTinh" class="form-control">
          <option value="1">Male</option>
          <option value="2">Female</option>
        </select>
      </div>
      <div class="form-group col-md-4">
        <label for="inputZip">Role</label>
        <select name="vaiTroID" class="form-control">
          <option value="1">Admin</option>
          <option value="2">Teacher</option>
          <option value="3">Student</option>
        </select>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
  </form>
